<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Task2"
    android:background="@color/background">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:backgroundTint="@color/fab_color"
        app:tint="@color/fab_arrow_color"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/back" />

    <ScrollView
        android:id="@+id/scrollViewTask2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/taskImage2"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textTaskName2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/walkorrunning"
                        android:contentDescription="@null" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textTaskName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:layout_marginStart="15dp"
                    android:text="Walk or ride a bike"
                    android:textColor="@color/shadyBlack"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />



                <TextView
                    android:id="@+id/taskLevel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/level_average"
                    android:textColor="@color/shadyBlack"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/taskImage2" />
                <TextView
                    android:id="@+id/taskScore2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="40dp"
                    android:text="@string/_80"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    app:layout_constraintTop_toBottomOf="@+id/taskImage2"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <Button
                    android:id="@+id/btnAddTask2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="50dp"
                    android:drawableEnd="@drawable/baseline_edit_note_24"
                    android:text="@string/add_to_my_task"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/taskImage2" />

                <Button
                    android:id="@+id/btnDone2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="25dp"
                    android:drawableEnd="@drawable/baseline_check_circle_24"
                    android:text="@string/already_done"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnAddTask2" />

                <TextView
                    android:id="@+id/description2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/description"
                    android:textColor="@color/shadyBlack"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnDone2" />

                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:contentDescription="@null"
                    android:text="Health: It improves cardiovascular fitness, strengthens muscles, aids in weight management, and enhances overall well-being.
Environment: It reduces air pollution, greenhouse gas emissions, and contributes to better air quality in your community.
Cost savings: It is a cost-effective mode of transportation, saving money on fuel, parking fees, vehicle maintenance, and related expenses.
Convenience and flexibility: It can be faster and more convenient for short trips, especially during peak traffic hours. You have the flexibility to navigate congested areas, take shortcuts, and avoid parking hassles.
Community engagement: It allows you to connect with your surroundings, discover new places, interact with people, and feel more connected to your neighborhood.
Reduced traffic congestion: Choosing alternative modes of transportation helps reduce traffic congestion, making commutes smoother for everyone.
Enjoyment and stress relief: It provides a sense of freedom, lets you enjoy nature, clear your mind, and reduce stress levels.

Notes and direction
Safety reminder: Prioritize safety by using designated lanes, following traffic rules, wearing appropriate gear, and being aware of your surroundings. Assess your route, distance, and capabilities to gradually increase activity levels and choose comfortable routes."
                    android:textColor="@color/shadyBlack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/description2" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <Space
                android:layout_width="380dp"
                android:layout_height="200dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>