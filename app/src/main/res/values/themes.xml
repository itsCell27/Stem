<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/shadyBlack</item>
        <item name="colorOnPrimary">@color/shadyBlack</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/shadyBlack</item>
        <item name="colorSecondaryVariant">@color/shadyBlack</item>
        <item name="colorOnSecondary">@color/shadyBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SlideActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>

    </style>
